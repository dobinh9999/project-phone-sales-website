@{
    ViewBag.Title = "Quên Mật Khẩu";
}

<h2>Quên Mật Khẩu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="email_sdt" class="control-label">Email hoặc Số điện thoại</label>
        <input type="text" name="email_sdt" class="form-control" placeholder="Nhập email hoặc số điện thoại của bạn" />
    </div>

    if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }

    <button type="submit" class="btn btn-primary">Reset</button>
}

<p><a href="@Url.Action("Login", "NguoiDungs")">Quay lại trang đăng nhập</a></p>
